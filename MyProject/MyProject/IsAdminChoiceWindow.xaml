<Window x:Class="MyProject.IsAdminChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyProject"
        mc:Ignorable="d"
        Title="Admin Choice Window" MinHeight="500" MinWidth="400" Height="500" Width="400"
        Style="{StaticResource MyWindow}" >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Create as admin" Name="Yes" Click="Yes_Click"
                Style="{DynamicResource MyButton}"
                Grid.Column="0" Grid.Row="0"></Button>
        <Button Content="Create as no admin" Name="No" Click="No_Click"
                Style="{DynamicResource MyButton}"
                Grid.Column="0" Grid.Row="1"></Button>
        <Button Content="Back" Name="Back" Click="Back_Click"
                Style="{DynamicResource MyButton}"
                Grid.Row="2"></Button>
    </Grid>
</Window>
